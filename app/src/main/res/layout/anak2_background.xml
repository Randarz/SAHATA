<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anak2_background">
    
    <ImageView
        android:id="@+id/anak_mini"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintWidth_percent="0.11"
        android:src="@drawable/anak_mini"
        android:layout_marginEnd="55dp"
        app:layout_constraintTop_toTopOf="@id/anak_nugu"
        app:layout_constraintBottom_toBottomOf="@id/anak_nugu"
        app:layout_constraintEnd_toStartOf="@id/anak_nugu"/>

    <ImageView
        android:id="@+id/anak_nugu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintWidth_percent="0.11"
        android:layout_marginBottom="25dp"
        android:src="@drawable/anak_nugu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/anak_pede"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintWidth_percent="0.11"
        android:src="@drawable/anak_pede"
        android:layout_marginStart="55dp"
        app:layout_constraintStart_toEndOf="@id/anak_nugu"
        app:layout_constraintTop_toTopOf="@id/anak_nugu"
        app:layout_constraintBottom_toBottomOf="@id/anak_nugu"/>

    <ImageView
        android:id="@+id/anak_loto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintWidth_percent="0.11"
        android:layout_marginEnd="55dp"
        android:src="@drawable/anak_loto"
        app:layout_constraintEnd_toStartOf="@id/anak_minggu"
        app:layout_constraintTop_toTopOf="@id/anak_minggu"
        app:layout_constraintBottom_toBottomOf="@id/anak_minggu" />

    <ImageView
        android:id="@+id/anak_minggu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintWidth_percent="0.11"
        android:layout_marginStart="3.7dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/anak_minggu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anak_nugu"
        app:layout_constraintStart_toStartOf="@id/anak_nugu"
        app:layout_constraintEnd_toEndOf="@id/anak_nugu"/>

    <ImageView
        android:id="@+id/anak_pintu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintWidth_percent="0.11"
        android:layout_marginStart="55dp"
        android:src="@drawable/anak_pintu"
        app:layout_constraintStart_toEndOf="@id/anak_minggu"
        app:layout_constraintTop_toTopOf="@id/anak_minggu"
        app:layout_constraintBottom_toBottomOf="@id/anak_minggu"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>