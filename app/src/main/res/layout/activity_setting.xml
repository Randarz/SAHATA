<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_background">

    <!-- Centered Setting Field -->
    <ImageView
        android:id="@+id/setting_suara"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.22"
        app:layout_constraintWidth_percent="0.09"
        android:layout_marginBottom="70dp"
        android:src="@drawable/setting_suara"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/seekbar_suarabackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.24"
        android:src="@drawable/setting_bar"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <SeekBar
        android:id="@+id/setting_barsuara"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintWidth_percent="0.24"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/seekbar_thumb"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/setting_suaramin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.04"
        android:src="@drawable/setting_suaramin"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/setting_barsuara"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/setting_suaraplus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.04"
        android:src="@drawable/setting_suaraplus"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="@id/setting_barsuara"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/setting_musik"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.09"
        android:layout_marginTop="0dp"
        android:src="@drawable/setting_musik"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_barsuara" />

    <ImageView
        android:id="@+id/seekbar_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.24"
        android:src="@drawable/setting_bar"
        app:layout_constraintTop_toBottomOf="@id/setting_musik"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/setting_barmusik"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintWidth_percent="0.24"
        android:layout_marginTop="3dp"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/seekbar_thumb"
        app:layout_constraintTop_toBottomOf="@id/setting_musik"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/setting_musikmin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.04"
        android:src="@drawable/setting_suaramin"
        app:layout_constraintStart_toStartOf="@id/seekbar_background"
        app:layout_constraintTop_toTopOf="@id/seekbar_background"
        app:layout_constraintBottom_toBottomOf="@id/seekbar_background"
 />

    <ImageView
        android:id="@+id/setting_musikplus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.04"
        android:src="@drawable/setting_suaraplus"
        app:layout_constraintEnd_toEndOf="@id/seekbar_background"
        app:layout_constraintTop_toTopOf="@id/seekbar_background"
        app:layout_constraintBottom_toBottomOf="@id/seekbar_background"/>

    <ImageView
        android:id="@+id/setting_kembali"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.14"
        android:src="@drawable/setting_kembali"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/setting_keluar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.14"
        android:src="@drawable/setting_keluar"
        android:layout_marginTop="175dp"
        android:layout_marginStart="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>