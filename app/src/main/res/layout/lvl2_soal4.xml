<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/level2_background">

    <ImageView
        android:id="@+id/soal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.4"
        android:src="@drawable/lvl2_soal4"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/playbutton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintWidth_percent="0.1"
        android:src="@drawable/level2_play"
        app:layout_constraintStart_toEndOf="@id/soal"
        app:layout_constraintTop_toTopOf="@id/soal"
        app:layout_constraintBottom_toBottomOf="@id/soal"/>

    <ImageView
        android:id="@+id/option1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.19"
        app:layout_constraintWidth_percent="0.11"
        android:src="@drawable/lvl2_soal4_opt1"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/option2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.19"
        app:layout_constraintWidth_percent="0.11"
        android:src="@drawable/lvl2_soal4_opt2"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/option3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.19"
        app:layout_constraintWidth_percent="0.11"
        android:src="@drawable/lvl2_soal4_opt3"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/option4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.19"
        app:layout_constraintWidth_percent="0.11"
        android:src="@drawable/lvl2_soal4_opt4"
        android:layout_marginStart="300dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>