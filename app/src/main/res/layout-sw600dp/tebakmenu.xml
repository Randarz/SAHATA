<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tebakaksaramenu_background_tab">

    <ImageView
        android:id="@+id/level1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.1"
        android:src="@drawable/menu_lvl1"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/level2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.1"
        android:src="@drawable/menu_lvl2"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/level3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.1"
        android:src="@drawable/menu_lvl3"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/level4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.1"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="150dp"
        android:src="@drawable/menu_lvl4"
        app:layout_constraintEnd_toEndOf="@id/level2"
        app:layout_constraintStart_toStartOf="@id/level2"
        app:layout_constraintTop_toBottomOf="@id/level2"/>

    <ImageView
        android:id="@+id/level5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="150dp"
        android:src="@drawable/menu_lvl5"
        app:layout_constraintEnd_toEndOf="@id/level2"
        app:layout_constraintStart_toStartOf="@id/level2"
        app:layout_constraintTop_toBottomOf="@id/level2"/>


</androidx.constraintlayout.widget.ConstraintLayout>