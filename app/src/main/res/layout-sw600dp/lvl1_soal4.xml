<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/level1_background_tab">

    <ImageView
        android:id="@+id/soal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.5"
        android:src="@drawable/lvl1_soal4"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/option1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.19"
        app:layout_constraintWidth_percent="0.11"
        android:layout_marginEnd="9dp"
        android:src="@drawable/lvl1_soal4_opt1"
        app:layout_constraintEnd_toStartOf="@id/option2"
        app:layout_constraintTop_toTopOf="@id/option2"
        app:layout_constraintBottom_toBottomOf="@id/option2"/>

    <ImageView
        android:id="@+id/option2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.19"
        app:layout_constraintWidth_percent="0.11"
        android:src="@drawable/lvl1_soal4_opt2"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintTop_toBottomOf="@id/soal"
        app:layout_constraintEnd_toEndOf="@id/soal"
        app:layout_constraintStart_toStartOf="@id/soal" />

    <ImageView
        android:id="@+id/option3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.19"
        app:layout_constraintWidth_percent="0.11"
        android:src="@drawable/lvl1_soal4_opt3"
        android:layout_marginStart="9dp"
        app:layout_constraintStart_toEndOf="@id/option2"
        app:layout_constraintTop_toTopOf="@id/option2"
        app:layout_constraintBottom_toBottomOf="@id/option2" />

    <ImageView
        android:id="@+id/option4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.19"
        app:layout_constraintWidth_percent="0.11"
        android:src="@drawable/lvl1_soal4_opt4"
        android:layout_marginStart="9dp"
        app:layout_constraintStart_toEndOf="@id/option3"
        app:layout_constraintTop_toTopOf="@id/option3"
        app:layout_constraintBottom_toBottomOf="@id/option3" />


</androidx.constraintlayout.widget.ConstraintLayout>