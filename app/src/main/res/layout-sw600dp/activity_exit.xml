<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_background_tab">

    <ImageView
        android:id="@+id/exit_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.54"
        app:layout_constraintWidth_percent="0.47"
        android:src="@drawable/exit_field_tab"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/exit_kembali"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.16"
        android:src="@drawable/setting_kembali"
        android:layout_marginEnd="200dp"
        app:layout_constraintTop_toBottomOf="@id/exit_field"
        app:layout_constraintBottom_toBottomOf="@id/exit_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/exit_keluar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.16"
        android:src="@drawable/setting_keluar"
        android:layout_marginStart="200dp"
        app:layout_constraintTop_toBottomOf="@id/exit_field"
        app:layout_constraintBottom_toBottomOf="@id/exit_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>